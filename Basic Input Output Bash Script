# This is the shebang and the absolute path to the Bash shell interpreter 
#!/bash/bin

# This asks for the user's name
echo "Enter your name:"

# This reads the name that the user inputs
read name

# This prints a greeting
echo "Hello, $name! Welcome to the script."

# This shows today's date and time
echo "Today's date is: $(date)"

# This shows the current directory
echo "You are currently in: $(pwd)

# This echos an exit code to determine whether the previous command was successful
echo$?
